<MainScreen>:

    name: "main"

    FloatLayout:

        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'images\mainscreen_back.jpg'


        ##### Buttons #####


        Button:
            text: "START"
            font_size: 20
            pos_hint: {"x":0.35, "y":0.55}
            size_hint: 0.3, 0.1
            on_release: 
                root.BtnStart()

        Button:
            text: "STOP"  
            font_size: 20
            pos_hint: {"x":0.35, "y":0.40}
            size_hint: 0.3, 0.1
            on_release: 
                root.BtnStop()


        ##### Frequency input and labels #####


        Label:
            text: "Test each: " 
            font_size: 30
            pos_hint: {"x":0.19, "y":0.70}
            size_hint: 0.1, 0.075
        
        TextInput:
            text: "5" 
            id: frequency
            font_size: 30 
            pos_hint: {"x":0.35, "y":0.70}
            size_hint: 0.1, 0.075

        Label:
            text: "minutes" 
            font_size: 30
            pos_hint: {"x":0.48, "y":0.70}
            size_hint: 0.1, 0.075

             
        ##### Checkbox and labels #####


        Label:
            text: "Download" 
            font_size: 30
            pos_hint: {"x":0.10, "y":0.90}
            size_hint: 0.1, 0.075

        CheckBox:
            pos_hint: {"x":0.10, "y":0.85}
            size_hint: 0.1, 0.075
            on_active: root.DownloadTest = self.active
                
        Label:
            text: "Ping" 
            font_size: 30
            pos_hint: {"x":0.45, "y":0.90}
            size_hint: 0.1, 0.075

        CheckBox:
            pos_hint: {"x":0.45, "y":0.85}
            size_hint: 0.1, 0.075
            on_active: root.PingTest = self.active
             
        Label:
            text: "Upload" 
            font_size: 30
            pos_hint: {"x":0.85, "y":0.90}
            size_hint: 0.1, 0.075

        CheckBox:
            pos_hint: {"x":0.85, "y":0.85}
            size_hint: 0.1, 0.075
            on_active: root.UploadTest = self.active